{% schema %}
{
  "name": "Sale banner",
  "tag": "section",
  "class": "sale-banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Shop our bundles"
    },
    {
      "type": "text",
      "id": "url_link",
      "label": "Link ",
      "default": "Shop now"
    },
    {
      "type": "text",
      "id": "url_text",
      "label": "Link text",
      "default": "Shop now"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#EC008D"
    }
  ],
  "presets": [
    {
      "name": "Showcase component"
    }
  ]
}
{% endschema %}

<div
  class="py-[64px] flex justify-center items-center mb-[4rem] gap-2 flex-col"
  style="background-color:{{ section.settings.background }}; color:{{ section.settings.text_color }}"
>
  <div class="text-[2.5rem]">{{ section.settings.title }}</div>
  <a class="underline" href="{{ section.settings.url_link }}"> {{ section.settings.url_text }}</a>
</div>
